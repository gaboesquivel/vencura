{
  "type": "module",
  "name": "@repo/fastify",
  "version": "1.0.0",
  "description": "This project was bootstrapped with Fastify-CLI.",
  "main": "app.ts",
  "engines": {
    "node": ">=22"
  },
  "directories": {
    "test": "test"
  },
  "scripts": {
    "test": "NODE_OPTIONS='--import tsx' vitest run",
    "test:watch": "NODE_OPTIONS='--import tsx' vitest",
    "test:cov": "NODE_OPTIONS='--import tsx' vitest run --coverage",
    "start": "pnpm run build:ts && node --env-file=.env dist/app.js",
    "build": "pnpm db:migrate && tsc",
    "build:ts": "tsc",
    "watch:ts": "tsc -w",
    "dev": "pnpm db:migrate && node --env-file=.env --watch --import tsx src/index.ts",
    "db:migrate": "node --env-file=.env --import tsx scripts/migrate.ts",
    "dev:start": "pnpm run build:ts && node --env-file=.env dist/app.js",
    "lint:eslint": "eslint . --max-warnings 0",
    "lint:eslint:fix": "eslint . --fix --max-warnings 0",
    "checktypes": "tsc --noEmit",
    "generate:openapi": "node --env-file=.env --import tsx scripts/generate-openapi.ts",
    "db:start": "supabase start",
    "db:stop": "supabase stop",
    "db:reset": "supabase db reset",
    "db:status": "supabase status"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@ai-sdk/openai": "^3.0.11",
    "@fastify/autoload": "^6.3.1",
    "@fastify/cors": "^11.2.0",
    "@fastify/rate-limit": "^10.3.0",
    "@fastify/sensible": "^6.0.4",
    "@fastify/swagger": "^9.6.1",
    "@fastify/type-provider-typebox": "^6.1.0",
    "@repo/error": "workspace:*",
    "@repo/utils": "workspace:*",
    "@sentry/node": "^10.34.0",
    "@scalar/fastify-api-reference": "^1.43.5",
    "@sinclair/typebox": "^0.34.47",
    "@t3-oss/env-core": "^0.13.10",
    "@vercel/node": "^3.0.0",
    "ai": "^6.0.37",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.44.5",
    "fastify": "^5.7.0",
    "fastify-cli": "^7.4.1",
    "fastify-plugin": "^5.1.0",
    "pg": "^8.13.1",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@electric-sql/pglite": "^0.3.14",
    "@repo/eslint-config": "workspace:*",
    "@types/node": "^25.0.9",
    "@types/pg": "^8.11.10",
    "@vitest/coverage-v8": "^4.0.17",
    "c8": "^10.1.3",
    "concurrently": "^9.2.1",
    "drizzle-kit": "^0.31.0",
    "eslint": "^9.39.2",
    "fastify-tsconfig": "^3.0.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0",
    "typescript": "~5.9.3",
    "vite-plugin-node": "^7.0.0",
    "vite-tsconfig-paths": "^6.0.4",
    "vitest": "^4.0.17"
  }
}
