{
  "preset": "ts-jest/presets/default",
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": "\\.e2e-spec\\.ts$",
  "transform": {
    "^.+\\.ts$": ["ts-jest", {
      "tsconfig": {
        "module": "CommonJS",
        "moduleResolution": "node"
      }
    }]
  },
  "transformIgnorePatterns": [],
  "globalSetup": "<rootDir>/setup-server.ts",
  "globalTeardown": "<rootDir>/teardown-server.ts",
  "setupFilesAfterEnv": ["<rootDir>/setup.ts"],
  "testTimeout": 120000,
  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>/../src/$1",
    "^@cosmjs/encoding$": "<rootDir>/__mocks__/@cosmjs-encoding.ts",
    "^@vencura/lib$": "<rootDir>/../../../packages/lib/dist/cjs/index.cjs"
  },
  "collectCoverageFrom": [
    "src/**/*.(t|j)s",
    "!src/**/*.spec.ts",
    "!src/**/*.d.ts"
  ],
  "workerIdleMemoryLimit": "1GB",
  "maxWorkers": 1
}
