# Production Environment Configuration
# This file is committed - contains non-sensitive configuration only

# Port (optional, defaults to 3077)
PORT=3077

# Local blockchain configuration
# Use mainnet (not local blockchain)
USE_LOCAL_BLOCKCHAIN=false

# Optional: Per-chain RPC URL overrides for mainnets
# Format: RPC_URL_<CHAIN_ID>=... or RPC_URL_<DYNAMIC_NETWORK_ID>=...
# RPC_URL_42161=https://arbitrum-mainnet.infura.io/v3/your_key
# RPC_URL_8453=https://base-mainnet.infura.io/v3/your_key
# SOLANA_RPC_URL=https://api.mainnet-beta.solana.com

# Optional: Swagger UI (default: false for security - should be false in production)
ENABLE_SWAGGER_UI=false
