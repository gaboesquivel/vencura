{
  "extends": "@workspace/typescript-config/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@vencura/ui/*": ["../../packages/ui/src/*"],
      "next-mdx-import-source-file": ["./app/mdx-components.tsx"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "next.config.mjs",
    "theme.config.tsx",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "../../config/typescript/reset.d.ts"
  ],
  "exclude": ["node_modules"]
}

