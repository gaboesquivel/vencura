{
  "name": "@repo/contracts-solana",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build": "command -v anchor >/dev/null 2>&1 && anchor build || (echo 'Anchor not installed, skipping Solana contract build' && exit 0)",
    "test": "command -v anchor >/dev/null 2>&1 && anchor test || (echo 'Anchor not installed, skipping Solana contract tests' && exit 0)",
    "test:local": "anchor test --skip-local-validator",
    "deploy:local": "anchor deploy",
    "deploy:devnet": "anchor deploy --provider.cluster devnet",
    "deploy:testnet": "anchor deploy --provider.cluster testnet"
  },
  "dependencies": {
    "@coral-xyz/anchor": "^0.32.1",
    "@solana/spl-token": "^0.4.14",
    "@solana/web3.js": "^1.98.4",
    "chai": "^6.2.1"
  },
  "devDependencies": {
    "@types/chai": "^5.2.3",
    "@types/node": "^24.10.1",
    "ts-mocha": "^11.1.0",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=22"
  }
}
