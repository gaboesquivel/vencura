{
  // Intentional CommonJS exception: Anchor/Solana tooling requires CommonJS
  // Anchor framework and Solana testing tools expect CommonJS module format
  "compilerOptions": {
    "types": ["mocha", "chai"],
    "typeRoots": ["./node_modules/@types"],
    "lib": ["es2020"],
    "module": "commonjs",
    "target": "es2020",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["**/*.ts", "../../config/typescript/reset.d.ts"]
}
