{
  "name": "@repo/contracts-evm",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build": "command -v forge >/dev/null 2>&1 && forge build || (echo 'Foundry not installed, skipping EVM contract build' && exit 0)",
    "test": "command -v forge >/dev/null 2>&1 && forge test || (echo 'Foundry not installed, skipping EVM contract tests' && exit 0)",
    "test:coverage": "forge coverage",
    "test:snapshot": "forge snapshot",
    "fmt": "forge fmt",
    "deploy:local": "forge script script/TestToken.s.sol:TestTokenScript --rpc-url http://localhost:8545 --broadcast",
    "deploy:anvil": "anvil",
    "deploy:dnmc": "forge script script/DNMC.s.sol:DNMCScript --rpc-url $RPC_URL --broadcast --private-key $PRIVATE_KEY",
    "deploy:usdc": "forge script script/USDC.s.sol:USDCScript --rpc-url $RPC_URL --broadcast --private-key $PRIVATE_KEY",
    "deploy:usdt": "forge script script/USDT.s.sol:USDTScript --rpc-url $RPC_URL --broadcast --private-key $PRIVATE_KEY",
    "deps:update": "forge update"
  },
  "engines": {
    "node": ">=22"
  }
}
