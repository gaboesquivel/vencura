{
  "name": "@repo/error",
  "version": "0.0.1",
  "type": "module",
  "private": true,
  "description": "Error handling utilities with Sentry integration and centralized error catalog",
  "license": "PROPRIETARY",
  "exports": {
    "./core": {
      "types": "./src/core/index.ts",
      "import": "./dist/core.js"
    },
    "./node": {
      "types": "./src/node/index.ts",
      "import": "./dist/node.js"
    },
    "./nextjs": {
      "types": "./src/nextjs/index.ts",
      "import": "./dist/nextjs.js"
    },
    "./browser": {
      "types": "./src/browser/index.ts",
      "import": "./dist/browser.js"
    },
    "./react": {
      "types": "./src/react/index.ts",
      "import": "./dist/react.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "checktypes": "tsc --noEmit",
    "lint:eslint": "eslint . --max-warnings 0",
    "lint:eslint:fix": "eslint . --fix --max-warnings 0",
    "test": "vitest run",
    "test:types": "tsc --noEmit src/__tests__/types.test-d.ts",
    "prepack": "pnpm build && node ../../scripts/prepare-publish.mjs",
    "postpack": "node ../../scripts/restore-publish.mjs"
  },
  "peerDependencies": {
    "@repo/utils": "workspace:*",
    "@sentry/node": "^10.34.0",
    "@sentry/nextjs": "^10.34.0",
    "@sentry/browser": "^10.34.0",
    "react": "^19.0.0"
  },
  "peerDependenciesMeta": {
    "@sentry/node": {
      "optional": true
    },
    "@sentry/nextjs": {
      "optional": true
    },
    "@sentry/browser": {
      "optional": true
    }
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@sentry/browser": "^10.34.0",
    "@sentry/nextjs": "^10.34.0",
    "@sentry/node": "^10.34.0",
    "@types/node": "^25.0.9",
    "@types/react": "^19.0.0",
    "eslint": "^9.39.2",
    "react": "^19.0.0",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.17"
  }
}
