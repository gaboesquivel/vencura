{
  "name": "@repo/notif",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "main": "src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts",
      "require": "./src/index.ts"
    },
    "./types/*": {
      "types": "./src/types/*.ts",
      "import": "./src/types/*.ts",
      "require": "./src/types/*.ts"
    },
    "./node": {
      "types": "./src/env.ts",
      "import": "./src/env.ts",
      "require": "./src/env.ts"
    }
  },
  "scripts": {
    "clean": "rm -rf .turbo node_modules",
    "lint": "biome check .",
    "lint:eslint": "eslint . --max-warnings 0",
    "lint:eslint:fix": "eslint . --fix --max-warnings 0",
    "format": "biome format --write .",
    "checktypes": "tsc --noEmit"
  },
  "dependencies": {
    "@repo/email": "workspace:*",
    "nanoid": "^5.1.6",
    "resend": "^6.5.2",
    "zod": "^4.1.13"
  },
  "peerDependencies": {
    "@t3-oss/env-core": "^0.13.10"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@t3-oss/env-core": "^0.13.10",
    "@types/node": "^22.19.7",
    "@types/react": "^19.2.8",
    "eslint": "^9.39.2",
    "react": "^19.2.3",
    "typescript": "^5.9.3"
  }
}
