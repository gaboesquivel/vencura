{
  "name": "@repo/email",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "main": "index.ts",
  "exports": {
    "./emails/*": {
      "types": "./emails/*.tsx",
      "import": "./emails/*.tsx",
      "require": "./emails/*.tsx"
    },
    "./render": {
      "types": "./render.ts",
      "node": {
        "import": "./render.ts",
        "require": "./render.ts"
      }
    }
  },
  "scripts": {
    "clean": "rm -rf .turbo node_modules",
    "lint": "biome check .",
    "lint:eslint": "eslint . --max-warnings 0",
    "lint:eslint:fix": "eslint . --fix --max-warnings 0",
    "format": "biome format --write .",
    "checktypes": "tsc --noEmit",
    "dev": "email dev -p 3003",
    "build": "email build",
    "start": "email start"
  },
  "dependencies": {
    "@react-email/components": "1.0.1",
    "@react-email/render": "2.0.0",
    "@react-email/tailwind": "2.0.1",
    "@repo/ui": "workspace:*",
    "date-fns": "^4.1.0",
    "react-email": "5.0.6"
  },
  "peerDependencies": {
    "react": "^19.0.0"
  },
  "devDependencies": {
    "@react-email/preview-server": "5.0.6",
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/node": "^22.19.7",
    "@types/react": "^19.2.8",
    "eslint": "^9.39.2",
    "react": "^19.2.3",
    "typescript": "^5.9.3"
  }
}
