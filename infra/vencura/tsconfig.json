{
  // Intentional CommonJS exception: Pulumi infrastructure tooling requires CommonJS
  // Pulumi's TypeScript runtime expects CommonJS modules for proper execution
  "extends": "@workspace/typescript-config/base.json",
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./bin",
    "rootDir": "./",
    "lib": ["ES2022"]
  },
  "include": ["**/*.ts", "../../config/typescript/reset.d.ts"],
  "exclude": ["node_modules", "bin"]
}

