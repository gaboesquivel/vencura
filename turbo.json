{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**", "bin/**", "src/**/*.ts"],
      "env": [
        "DYNAMIC_ENVIRONMENT_ID",
        "DYNAMIC_API_TOKEN",
        "SEPOLIA_RPC_URL",
        "ENCRYPTION_KEY",
        "RPC_URL_*",
        "ARBITRUM_SEPOLIA_RPC_URL",
        "SOLANA_RPC_URL"
      ]
    },
    "lint": {
      "dependsOn": ["^lint"],
      "env": ["NODE_ENV"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "test": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"]
    },
    "test:e2e": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "env": [
        "DYNAMIC_ENVIRONMENT_ID",
        "DYNAMIC_API_TOKEN",
        "ENCRYPTION_KEY",
        "TEST_AUTH_TOKEN"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
