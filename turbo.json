{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**", "bin/**", "src/**/*.ts"],
      "env": [
        "DYNAMIC_ENVIRONMENT_ID",
        "DYNAMIC_API_TOKEN",
        "SEPOLIA_RPC_URL",
        "ENCRYPTION_KEY",
        "RPC_URL_*",
        "ARBITRUM_SEPOLIA_RPC_URL",
        "SOLANA_RPC_URL",
        "NODE_ENV"
      ]
    },
    "lint": {
      "dependsOn": ["^lint"],
      "env": ["NODE_ENV", "CI", "NEXT_RUNTIME", "NEXT_PUBLIC_SENTRY_DSN", "SENTRY_ORG", "SENTRY_PROJECT"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "test": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"]
    },
    "test:coverage": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["coverage/**"]
    },
    "test:e2e": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*", "e2e/**", "playwright.config.ts"],
      "outputs": ["playwright-report/**", "test-results/**"],
      "env": [
        "DYNAMIC_ENVIRONMENT_ID",
        "DYNAMIC_API_TOKEN",
        "ENCRYPTION_KEY",
        "TEST_AUTH_TOKEN",
        "NEXT_PUBLIC_DYNAMIC_ENVIRONMENT_ID",
        "NEXT_PUBLIC_API_URL",
        "PORT",
        "PLAYWRIGHT_TEST_BASE_URL",
        "CI"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
