{
  "name": "vencura",
  "private": true,
  "scripts": {
    "build": "turbo run build --filter='!./contracts/**'",
    "dev": "turbo dev",
    "checktypes": "turbo checktypes",
    "lint": "pnpm run lint:biome && pnpm run lint:eslint",
    "lint:biome": "biome check .",
    "lint:biome:fix": "biome check . --write",
    "lint:eslint": "turbo run lint:eslint",
    "lint:eslint:fix": "turbo run lint:eslint:fix",
    "lint:fix": "pnpm run lint:eslint:fix && pnpm run lint:biome:fix",
    "test": "turbo run test --filter='!./contracts/**'",
    "format": "biome format . --write",
    "hooks:pre-commit": "pnpm run hooks:security && biome check --write --staged --no-errors-on-unmatched && git update-index --again",
    "hooks:security": "node scripts/block-secret-files.mjs && node scripts/scan-secrets-staged.mjs && node scripts/scan-osv.mjs",
    "security:block-files": "node scripts/block-secret-files.mjs",
    "security:secrets": "node scripts/scan-secrets-staged.mjs",
    "security:secrets:full": "gitleaks detect --redact --verbose --config .gitleaks.toml",
    "security:osv": "node scripts/scan-osv.mjs",
    "security:audit": "pnpm audit --audit-level=moderate",
    "security:check": "node scripts/security-check.mjs",
    "postinstall": "npx simple-git-hooks",
    "setup": "pnpm install && npx simple-git-hooks && pnpm setup:security && pnpm setup:evm && pnpm setup:solana && pnpm setup:database",
    "setup:security": "node scripts/setup-gitleaks.mjs && node scripts/setup-osv-scanner.mjs",
    "setup:gitleaks": "node scripts/setup-gitleaks.mjs",
    "setup:osv": "node scripts/setup-osv-scanner.mjs",
    "setup:evm": "node scripts/setup-evm-tools.mjs",
    "setup:solana": "node scripts/setup-solana-tools.mjs",
    "setup:database": "node scripts/setup-database.mjs",
    "qa": "pnpm i && pnpm lint:fix && pnpm checktypes && pnpm run build && pnpm run test"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@repo/typescript-config": "workspace:*",
    "@tailwindcss/postcss": "^4.1.18",
    "simple-git-hooks": "2.13.1",
    "turbo": "^2.7.5",
    "typescript": "5.9.3"
  },
  "engines": {
    "node": ">=22"
  },
  "packageManager": "pnpm@10.28.0",
  "simple-git-hooks": {
    "pre-commit": "pnpm run hooks:pre-commit"
  },
  "pnpm": {
    "overrides": {
      "tmp@<=0.2.3": ">=0.2.4",
      "js-yaml@<4.1.1": ">=4.1.1",
      "diff@<8.0.3": ">=8.0.3",
      "bigint-buffer": "npm:bigint-buffer-fixed@1.1.6",
      "tar@<7.5.3": ">=7.5.3",
      "esbuild@<0.25.0": ">=0.25.0",
      "path-to-regexp@<6.3.0": ">=6.3.0",
      "undici@<6.23.0": ">=6.23.0",
      "@metamask/sdk@0.33.0": ">=0.33.1",
      "@metamask/sdk-communication-layer@0.33.0": ">=0.33.1",
      "axios@<1.12.0": ">=1.12.0",
      "valibot@<1.2.0": ">=1.2.0"
    },
    "onlyBuiltDependencies": [
      "@sentry/cli",
      "esbuild"
    ]
  }
}
