{
  "name": "dynamic",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "NODE_ENV=development turbo dev",
    "dev:local": "NODE_ENV=development ./scripts/start-anvil.sh & turbo dev",
    "dev:staging": "NODE_ENV=staging turbo dev",
    "lint": "turbo lint",
    "format": "biome format --write .",
    "hooks:pre-commit": "bun run lint && bun run format",
    "qa": "bun install && bun run format && turbo run lint && turbo build && turbo run test --continue",
    "contracts:evm:build": "cd contracts/evm && forge build",
    "contracts:evm:test": "cd contracts/evm && forge test",
    "contracts:solana:build": "cd contracts/solana && anchor build",
    "contracts:solana:test": "cd contracts/solana && anchor test"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@total-typescript/ts-reset": "^0.6.1",
    "@workspace/eslint-config": "workspace:*",
    "@workspace/typescript-config": "workspace:*",
    "turbo": "^2.6.1",
    "typescript": "5.7.3"
  },
  "packageManager": "bun@1.3.2",
  "workspaces": ["apps/*", "packages/*", "infra/*", "config/*"],
  "engines": {
    "node": ">=20"
  },
  "overrides": {
    "require-in-the-middle": "7.5.2"
  }
}
