{
  "mcpServers": {
    "shadcn": {
      "command": "pnpm",
      "args": ["dlx", "shadcn@latest", "mcp"]
    },
    "v0": {
      "command": "pnpm",
      "args": [
        "dlx",
        "mcp-remote",
        "https://mcp.v0.dev",
        "--header",
        "Authorization: Bearer ${V0_API_KEY}"
      ]
    },
    "github": {
      "command": "pnpm",
      "args": [
        "dlx",
        "mcp-remote",
        "https://mcp.github.com",
        "--header",
        "Authorization: Bearer ${GITHUB_TOKEN}"
      ]
    },
    "vercel": {
      "command": "pnpm",
      "args": [
        "dlx",
        "mcp-remote",
        "https://mcp.vercel.com",
        "--header",
        "Authorization: Bearer ${VERCEL_API_TOKEN}"
      ]
    }
  }
}
